			</jobs>

			<genres main_genre="1" />
			<blocks min="2" max="3" slope="50" />
			<price min="8000" max="12000" slope="40" />
			<potential min="30" max="70" slope="45" />
			<outcome min="40" max="45" slope="40" />
			<review min="25" max="55" slope="45" />
			<speed min="45" max="65" slope="25" />
		</scripttemplate>

